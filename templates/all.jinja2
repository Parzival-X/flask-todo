{% extends 'base.jinja2' %}

{% block subtitle %}All the things{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
    <li id='tasks'>
        {{ task.name}}
        {% if task.performed%}
          Done on {{task.performed.strftime('%Y-%m-%d %I:%M %p') }}
          {% if task.performed_by.name %}
            by {{ task.performed_by.name }}
          {% endif %}
        {% else %}
          Undone
        {% endif %}
    </li>
    {% endfor %}
</ul>
{% endblock content %}
